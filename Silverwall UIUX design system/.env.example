# SilverWall Frontend Environment Configuration
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL
# Local development: http://localhost:8000
# Production: https://your-backend-domain.com
VITE_API_URL=http://localhost:8000

# WebSocket URL for live telemetry
# Local development: ws://localhost:8000
# Production: wss://your-backend-domain.com
VITE_WS_URL=ws://localhost:8000


# ============================================================================
# Feature Flags (Optional)
# ============================================================================

# Enable debug mode (shows additional console logs)
# Values: true | false
# Default: false
VITE_DEBUG_MODE=false

# Enable demo mode (uses simulated data instead of live API)
# Values: true | false
# Default: false
VITE_DEMO_MODE=false


# ============================================================================
# Performance Configuration (Optional)
# ============================================================================

# API request timeout in milliseconds
# Default: 10000 (10 seconds)
VITE_API_TIMEOUT=10000

# WebSocket reconnection max attempts
# Default: 10
VITE_WS_MAX_RETRIES=10


# ============================================================================
# Analytics (Optional)
# ============================================================================

# Google Analytics tracking ID
# Leave empty to disable analytics
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking
# Leave empty to disable error tracking
VITE_SENTRY_DSN=


# ============================================================================
# Notes
# ============================================================================

# - All variables must be prefixed with VITE_ to be exposed to the frontend
# - Changes require restarting the dev server (npm run dev)
# - For production builds, set these in your hosting platform (Vercel, Netlify, etc.)
# - See docs/ENVIRONMENT.md for detailed configuration guide
